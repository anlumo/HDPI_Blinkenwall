<div class="ui grid">
  <div class="left floated six wide column">
    <h1 class="ui header">Video Playback</h1>
  </div>
</div>
<div class="ui segment">
  Address:
  <div class="ui large input">
    <Input @type="text" placeholder="URL" @value={{this.url}} />
